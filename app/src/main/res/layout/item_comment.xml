<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@drawable/shadow">

    <TextView
        android:id="@+id/tv_time_publication_comment_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tv_user_name_comment_item"
        app:layout_constraintStart_toStartOf="@+id/tv_user_name_comment_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name_comment_item" />

    <TextView
        android:id="@+id/tv_user_name_comment_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/icon_person"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_verificate_user_comment_item"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="5dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/tv_user_name_comment_item"
        app:layout_constraintTop_toTopOf="@+id/tv_user_name_comment_item"
        app:srcCompat="@drawable/ic_ok" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon_person"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
        app:srcCompat="@drawable/ic_person" />

    <TextView
        android:id="@+id/tv_text_comment_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/icon_person"
        app:layout_constraintTop_toBottomOf="@+id/icon_person" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>